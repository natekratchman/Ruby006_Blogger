<% day = Date.today %>
<% while day > Date.parse('2014-10-05') do %>

  <h3><%= day.strftime('%a %b %dth, %Y') %></h3>
  <ol>
    <% @entries.collect do |entry| %>
      <% if entry.date == day %>
        <li><strong>"<a href="<%= entry.url %>" target="_blank"><%= entry.title %></a>"</strong> - by <a href="/Ruby006_Blogs/<%= @authors.find(entry.author_id).id %>"><%= @authors.find(entry.author_id).name %></a></li>
      <% end %>
    <% end %>
  </ol>
  <% day -= 1 %>
<% end %>